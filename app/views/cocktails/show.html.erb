<h1><%= @cocktail.name %></h1>
<li><%= link_to "back to the list", cocktails_path  %></li>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<li><%= link_to "add a dose", new_cocktail_dose_path(@cocktail)  %></li>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li> <%= dose.description %></li>
  <%= link_to "delete dose", dose_path(dose), method: :delete %>
  <% end  %>
</ul>


